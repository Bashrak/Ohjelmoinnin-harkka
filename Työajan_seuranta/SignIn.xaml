        mc:Ignorable="d"
        Title="Kirjaudu Sisään" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="45,55,0,20" VerticalAlignment="Top" Width="200"/>
            <Label Content="Salasana"  Width="200"/>
            <TextBox x:Name="textBox" Width ="200" Height="23" Margin="20,0,20,50" TextWrapping="Wrap" Text=""/>
            <Button x:Name="button_Ok" Content="Kirjaudu sisään" Margin="5,0,0,0" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="button_Cancel" Content="Peruuta" Margin="5,10,0,0" VerticalAlignment="Top" Width="120"/>

        </StackPanel>
    </Grid>
</Window>
